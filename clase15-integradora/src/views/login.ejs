<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
      body{
        margin: 0px;
        padding: 0px;
        background-color: #e9e9e9;
      }
      .card{
        max-width: 600px;
        background-color: white;
        margin: 110px auto 0px;
        border-radius: 5px;
        padding: 20px 37px;
      }
    </style>
</head>
<body>
  <div class="container">
    <div class="card">
      <div>
        <form action="/auth/login" method="POST" class="d-flex flex-column gap-2">
          <div>
            <label for="email">Ingresa tu email</label>
            <input type="text" id="email" name="email" required>
          </div>
          <div>
            <label for="password">Ingresa tu password</label>
            <input type="text" id="password" name="password" required>
          </div>
          <div>
            <button type="submit" class="btn btn-primary">Iniciar sesion</button>
          </div>
        </form>
      </div>
      <div>
        <button id="btnCookie">Obtener Cookies</button>
      </div>
    </div>
  </div>
  <script>
    let btn = document.getElementById("btnCookie");

    btn.addEventListener("click", async e => {
      console.log("Click!!!");

      const res = await fetch('/auth/cookies', {
        method: "GET",
        headers: {
          'Content-Type': 'application/json'
        }
      })
      console.log("Mi Respuesta es: ", (await res.json()));
    });

    
  </script>
</body>
</html>